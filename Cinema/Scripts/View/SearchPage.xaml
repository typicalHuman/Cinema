<Page x:Class="Cinema.Scripts.View.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      mc:Ignorable="d" FontFamily="Courier New" FontSize="20"
      d:DesignHeight="450" d:DesignWidth="400" Foreground="White"
      Title="SearchPage" DataContext="{x:Static local:App.SearchPageVM}">
    <Grid Background="#1b1c1b" Name="searchPage">

        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding ResultTitles, UpdateSourceTrigger=PropertyChanged}"
                          HorizontalContentAlignment="Stretch">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Left" Margin="5" MinHeight="120">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Poster}" Height="98" 
                                   Width="67" Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding Title}" Margin="5 0" MaxWidth="{Binding ElementName=searchPage,Path=ActualWidth}"
                                           VerticalAlignment="Top" TextWrapping="Wrap" Grid.Column="1"/>
                                <TextBlock Text="{Binding Year}" VerticalAlignment="Top"
                                           Grid.Column="2" Foreground="LightGray" HorizontalAlignment="Right"/>
                                <Button Width="50" Height="50" Content="{materialDesign:PackIcon Kind=Add, Size=20}"
                                        Style="{StaticResource MaximizeButtonStyle}" BorderThickness="1"
                                        BorderBrush="White" HorizontalAlignment="Left"
                                        VerticalAlignment="Top" Grid.Column="4"/>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


        <!--#region Loading -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                    IsEnabled="{Binding IsSearching, UpdateSourceTrigger=PropertyChanged}">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" Value="False">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <materialDesign:PackIcon Kind="Loading" Width="50" Height="50"
                                 HorizontalAlignment="Center" Foreground="LightGray">
                <materialDesign:PackIcon.RenderTransform>
                    <RotateTransform x:Name="rotate"
                         CenterX="25"
                         CenterY="25"/>
                </materialDesign:PackIcon.RenderTransform>
                <materialDesign:PackIcon.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="rotate"
                                     Storyboard.TargetProperty="Angle"
                                     By="360" Duration="0:0:1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </materialDesign:PackIcon.Triggers>
            </materialDesign:PackIcon>
            <TextBlock Text="Searching" Foreground="LightGray"/>
        </StackPanel>
        <!--#endregion-->
        
    </Grid>
</Page>
